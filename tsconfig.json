{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "filesGlob": [
    "typings/main.d.ts",
    "src/bootstrap.ts",
    "src/vendor.ts",
    "src/app/**/*.ts"
  ],
  "files": [
    "typings/main.d.ts",
    "src/bootstrap.ts",
    "src/vendor.ts",
    "src/app/app.ts",
    "src/app/categories/categories.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
